model Content {
  id            Int @id @default(autoincrement())
  text          String
  createdDate   DateTime
  updatedDate   DateTime
}

model Card {
  id            Int @id @default(autoincrement())
  title         String
  text          String
  createdDate   DateTime
  updatedDate   DateTime
}
